datasource db {
  provider = "sqlite"
//   url      = env("DATABASE_URL")
  url      = "file:../db/sqlite-sentipal.db"
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

// generator dbml {
